  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5002",
    "RateLimitOptions": {
      "ClientIdHeader": "ClientId",
      "QuotaExceededMessage": "Rate limit exceeded",
      "RateLimitCounterPrefix": "ocelot_rl",
      "DisableRateLimitHeaders": false,
      "HttpStatusCode": 429
    },
    "LoadBalancerOptions": {
      "Type": "RoundRobin",
      "Key": "LoadBalancerKey",
      "Expiry": 5000
    },
    "QoSOptions": {
      "ExceptionsAllowedBeforeBreaking": 3,
      "DurationOfBreak": 1000,
      "TimeoutValue": 5000
    }
