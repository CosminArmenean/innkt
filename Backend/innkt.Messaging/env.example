# Server Configuration
PORT=5003
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/innkt_messaging
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=innkt-messaging-files

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,application/pdf,text/plain

# Presence Service
PRESENCE_CLEANUP_INTERVAL=300000
PRESENCE_EXPIRY_TIME=1800000

# Notification Service
NOTIFICATION_RETENTION_DAYS=30
NOTIFICATION_CLEANUP_INTERVAL=3600000
