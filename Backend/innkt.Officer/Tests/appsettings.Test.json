{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=innkt_officer_test;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Key": "test-jwt-key-that-is-at-least-32-characters-long",
    "Issuer": "innkt-test",
    "Audience": "innkt-test",
    "ExpiryMinutes": 60
  },
  "Redis": {
    "InstanceName": "OfficerTest",
    "DefaultDatabase": 1,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AbortConnect": false,
    "ConnectRetry": 3
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Producer": {
      "ClientId": "officer-test-producer",
      "Acks": "All",
      "EnableIdempotence": true,
      "MessageTimeoutMs": 30000,
      "RetryBackoffMs": 100,
      "MessageSendMaxRetries": 3,
      "CompressionType": "Snappy",
      "BatchSize": 16384,
      "LingerMs": 5
    },
    "Consumer": {
      "GroupId": "officer-test-consumer-group",
      "ClientId": "officer-test-consumer",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": true,
      "AutoCommitIntervalMs": 5000,
      "SessionTimeoutMs": 30000,
      "HeartbeatIntervalMs": 3000,
      "MaxPollIntervalMs": 300000,
      "FetchMinBytes": 1,
      "FetchWaitMaxMs": 100,
      "StopOnError": false
    },
    "Service": {
      "ServiceName": "OfficerTest",
      "SubscribeToTopics": [
        "user.events",
        "social.events",
        "system.events"
      ],
      "PublishToTopics": [
        "user.events",
        "auth.events",
        "service.health"
      ]
    }
  },
  "Email": {
    "SmtpServer": "localhost",
    "SmtpPort": 587,
    "SmtpUsername": "test@example.com",
    "SmtpPassword": "test-password",
    "FromEmail": "test@example.com",
    "FromName": "innkt Test"
  },
  "FileStorage": {
    "UploadPath": "test-uploads",
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
  },
  "RateLimiting": {
    "EnableRateLimiting": false,
    "DefaultMaxRequests": 1000,
    "DefaultWindow": "00:01:00",
    "DefaultBlockDuration": "00:01:00",
    "FailOpen": true,
    "EnableLogging": false,
    "EnableMetrics": false
  }
}
