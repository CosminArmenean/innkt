{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Issuer": "http://localhost:5001",
    "Audience": "innkt.officer.api",
    "Key": "innkt.officer.jwt.secret.key.2025.very.long.and.secure.key"
  },
  "Redis": {
    "InstanceName": "NeuroSpark",
    "DefaultDatabase": 1,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AbortConnect": false,
    "ConnectRetry": 3,
    "Pool": {
      "MaxConnections": 50,
      "ConnectionTimeout": 5000,
      "KeepAlive": 180,
      "ConnectRetry": 3,
      "MaxResponseTime": 1000,
      "EnablePerformanceCounters": true
    }
  },
  "OfficerService": {
    "BaseUrl": "https://localhost:5001",
    "Timeout": 30000,
    "RetryCount": 3
  },
  "ServiceAuth": {
    "ServiceId": "NeuroSpark",
    "SecretKey": "neurospark-secret-key-2025",
    "Token": "innkt-social-service-token-2025",
    "TokenExpiryHours": 24,
    "CacheExpiryMinutes": 5
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "DefaultMaxRequests": 100,
    "DefaultWindow": "00:01:00",
    "DefaultBlockDuration": "00:05:00",
    "FailOpen": true,
    "EnableLogging": true,
    "EnableMetrics": true
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Producer": {
      "ClientId": "neurospark-producer",
      "Acks": "All",
      "EnableIdempotence": true,
      "MessageTimeoutMs": 30000,
      "RetryBackoffMs": 100,
      "MessageSendMaxRetries": 3,
      "CompressionType": "Snappy",
      "BatchSize": 16384,
      "LingerMs": 5
    },
    "Consumer": {
      "GroupId": "neurospark-consumer-group",
      "ClientId": "neurospark-consumer",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": true,
      "AutoCommitIntervalMs": 5000,
      "SessionTimeoutMs": 30000,
      "HeartbeatIntervalMs": 3000,
      "MaxPollIntervalMs": 300000,
      "FetchMinBytes": 1,
      "FetchMaxWaitMs": 100,
      "StopOnError": false
    },
    "Service": {
      "ServiceName": "NeuroSpark",
      "SubscribeToTopics": [
        "user.events",
        "image.processing.events",
        "qr.code.events"
      ],
      "PublishToTopics": [
        "image.processing.results",
        "qr.code.results",
        "service.health"
      ]
    }
  },
  "NeuroSpark": {
    "ImageProcessing": {
      "MaxFileSize": 10485760,
      "AllowedFormats": ["image/png", "image/jpeg", "image/webp"],
      "DefaultOutputSize": 512,
      "DefaultOutputFormat": "PNG",
      "EnableBackgroundRemoval": true,
      "EnableImageEnhancement": true
    },
    "QrCode": {
      "DefaultSize": 256,
      "DefaultFormat": "PNG",
      "DefaultExpirationDays": 7,
      "EnableCustomStyling": true
    },
    "Storage": {
      "UploadPath": "uploads",
      "ProcessedPath": "processed",
      "QrCodePath": "qrcodes",
      "MaxStorageSize": 1073741824
    }
  },
  "NudeNet": {
    "PythonScriptPath": "Scripts/nudenet_analyzer.py",
    "ModelPath": "Models/nudenet",
    "ConfidenceThreshold": 0.5,
    "EnableBatchProcessing": true,
    "MaxBatchSize": 10,
    "TimeoutSeconds": 30
  },
  "AIModeration": {
    "EnableTextModeration": true,
    "EnableImageModeration": true,
    "EnableNudeNet": true,
    "EnableSentimentAnalysis": true,
    "EnableSpamDetection": true,
    "EnableContentSuggestions": true,
    "EnableHashtagSuggestions": true,
    "EnableQualityAnalysis": true,
    "EnableComplianceChecking": true,
    "DefaultConfidenceThreshold": 0.7,
    "SpamThreshold": 0.8,
    "QualityThreshold": 0.6,
    "SentimentThreshold": -0.5
  },
  "BackgroundRemoval": {
    "PythonScriptPath": "Scripts/background_removal.py",
    "ModelPath": "Models/rembg",
    "OutputPath": "processed/background_removed",
    "MaxImageSize": 2048,
    "TimeoutSeconds": 60,
    "EnableBatchProcessing": true,
    "MaxBatchSize": 10,
    "DefaultModel": "u2net",
    "DefaultOutputFormat": "PNG",
    "DefaultQuality": 95,
    "OptimizeForWeb": true
  },
  "XAI": {
    "ApiKey": "YOUR_XAI_API_KEY_HERE",
    "BaseUrl": "https://api.x.ai/v1/",
    "Model": "grok-3",
    "MaxTokens": 500,
    "Temperature": 0.7,
    "TimeoutSeconds": 30,
    "Tier": "free",
    "DailyLimits": {
      "MaxRequestsPerDay": 100,
      "MaxTokensPerDay": 50000,
      "MaxTokensPerRequest": 500
    },
    "RateLimits": {
      "MaxRequestsPerMinute": 10,
      "MaxRequestsPerHour": 50
    },
    "RetryPolicy": {
      "MaxRetries": 2,
      "BaseDelaySeconds": 2,
      "MaxDelaySeconds": 10
    },
    "EnableFallback": true,
    "LogAllRequests": true
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:5003"
      }
    }
  }
}
